{
  "testEnvironment": "node",
  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/server.js",
    "!src/**/*.test.js"
  ],
  "testMatch": [
    "**/__tests__/**/*.(js|ts)",
    "**/?(*.)+(spec|test).(js|ts)"
  ],
  "coverageReporters": [
    "text",
    "lcov",
    "html"
  ],
  "setupFilesAfterEnv": ["<rootDir>/src/__tests__/setup.js"]
}
